class Solution {
    public static int findEquilibrium(int arr[]) {
        int n=arr.length;
        int left=0;
        int right=0;
        int sum=0;
        for(int i=0;i<n;i++)
        {
          right=right+arr[i];
        }
        for(int i=0;i<n;i++)
        {
          right=right-arr[i];
            if(left==right)
            {
                return i;
            }
            left=left+arr[i];
            
        }
      
        return -1;
    }
}
